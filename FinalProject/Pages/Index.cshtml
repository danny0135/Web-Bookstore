<div class="container">
    <div class="row justify-content-center">
        @foreach (var item in Model.Products)
        {
            string imagePath = "/photos/" + item.Image;

            <div class="col-lg-4 col-md-6 mb-4 d-flex align-items-stretch">
                <div class="card w-100">
                    <a href="/CustomerDetails?id=@item.ProductId" class="text-decoration-none">
                        <div class="text-center">
                            <img src="@imagePath" class="card-img-top img-fluid" alt="@item.Name">
                        </div>
                        <div class="card-body text-center">
                            <h5 class="card-title text-dark">@item.Name</h5>
                            <p class="card-text text-secondary">
                                <span class="by-author">by <span>@item.AuthorName</span></span>
                            </p>
                            <h5 class="card-title text-dark ">$@item.Price</h5>
                            <div class="add-to-cart">
                                <a href="/CustomerDetails?id=@item.ProductId" class="button">
                                    <i class="fas fa-cart-shopping cart-icon" style="color: #ffffff;"></i>&nbsp;
                                    Add To Cart
                                </a>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>
